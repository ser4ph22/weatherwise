{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*", "/assets/*", "/*.{css,scss,js,png,gif,ico,jpg,svg}"]
  },
  "mimeTypes": {
    ".json": "text/json"
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "skipBuildDuringDeployment": true,
  "include": [
    "dist/**"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.git/**",
    "**/tests/**",
    "**/*.test.js",
    "**/*.spec.js",
    "**/src/**",
    "**/public/**",
    "**/coverage/**"
  ]
}